<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >
    
	<ImageView
	    android:id="@+id/img"
	    android:layout_width="150dp"
	    android:layout_height="150dp"
	    android:scaleType="fitCenter"
	    android:src="@drawable/ic_caller"/>
	
	<TextView 
	    android:id="@+id/callName"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="10dp"
	    android:textColor="@color/caller"
	    android:textStyle="bold"
	    android:textSize="20dp"
	    android:text="text"/>
	
	<TextView 
	    android:id="@+id/callPhone"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="10dp"
	    android:textColor="@color/caller"
	    android:textStyle="bold"
	    android:textSize="15dp"
	    android:text="000-0000-0000"/>
	
	<Button 
	    android:id="@+id/callStopBtn"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="100dp"
	    android:padding="10dp"
	    android:background="@color/callerBtn"
	    android:textColor="@color/caller"
	    android:textStyle="bold"
	    android:text="Call Stop"/>
    
</LinearLayout>
